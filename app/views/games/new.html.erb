<h1>New Game</h1>
<p><% @letters.each do |letter| %>
  <%= letter %>
  <% end %>
</p>

<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <label for="score_input">What is the longest word you can find?</label>
  <input type="text" id="score_input" name = "word">
  <input type="submit" value="Play">
</form>